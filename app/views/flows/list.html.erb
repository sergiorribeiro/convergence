<div class="internal">
  <div class="container">
    <h1>My flows</h1>
    <a href="<%= flows_new_path %>" class="button -green">
      <div>
        <svg viewBox="0 0 80 80" fill="none">
          <path d="M61.7637 40H17.7637" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" />
          <path d="M39.7637 62L39.7637 18" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </div>
      <div>new flow</div>
    </a>
    <% if @flows.count.zero? %>
      <div>No flows to list</div>
    <% else %>
      <div class="list">
        <% @flows.each do |flow| %>
          <%= render partial: "shared/flow", locals: {flow: flow, type: :collection} %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>