<div class="internal">
  <div class="container">
    <h1>My flows</h1>
    <a href="<%= flows_new_path %>" class="button">
      <div>new flow</div>
    </a>
    <% if @flows.count.zero? %>
      <div>No flows to list</div>
    <% else %>
      <div class="list">
        <% @flows.each do |flow| %>
          <%= render partial: "shared/flow", locals: {flow: flow, type: :collection} %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>