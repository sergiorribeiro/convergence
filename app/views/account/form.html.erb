<%= form_with(url: "/myself/update", method: :post, local: true) do |form| %>
  <%= form.label :display_name %>
  <%= form.text_field :display_name, value: @current_user.display_name %>

  <%= form.label :current_password %>
  <%= form.text_field :current_password %>

  <%= form.label :new_password %>
  <%= form.text_field :new_password %>

  <%= form.label :new_password_repeat %>
  <%= form.text_field :new_password_repeat %>

  <%= link_to "Cancel", "/flows" %>
  <%= form.submit "Update" %>
<% end %>